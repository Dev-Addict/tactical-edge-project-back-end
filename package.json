	"scripts": {
		"lint": "eslint src/**/*.ts",
		"format": "eslint --fix src/**/*.ts",
		"dev": "ts-node-dev --respawn --poll --files src/index.ts",
		"build": "rimraf dist && tsc",
		"start": "node dist/index.js",
		"docker:dev": "docker-compose --env-file .dev.env up",
		"prepare": "husky",
		"test": "jest --watchAll",
		"docker:test": "docker-compose -f docker-compose.test.yml --env-file .test.env up",
		"docker:test:build": "docker-compose -f docker-compose.test.yml --env-file .test.env build",
		"ci": "test",
		"docker:ci": "docker-compose -f docker-compose.ci.yml --env-file .env.test up --exit-code-from ci"
	}
